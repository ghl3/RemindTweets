# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index


GET   /tweets/:id                   controllers.Application.tweet(id: Long)

# Mentions
GET     /mentions                   controllers.Application.mentions

GET     /testMentions               controllers.Application.testMentions

GET     /addTweet                   controllers.Application.addTweet


# POST     /tweet                     controllers.Application.addTweet
# GET      /tweet                     controllers.Application.getTweet(id: Long)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
