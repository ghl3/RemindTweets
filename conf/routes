# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~


# Home page
GET   /                             controllers.Application.index


# User views
GET   /user/:screenName             controllers.RestUser.user(screenName: String)
GET   /user/:screenName/timeline    controllers.RestUser.userTimeline(screenName: String)


# Reminders
GET   /reminder/:id                 controllers.RestReminder.reminder(id: Long)


# Misc
#GET   /scheduledreminder/:id        controllers.Application.scheduledreminder(id: Long)
#GET   /tweets/:id                   controllers.Application.tweet(id: Long)


# Admin API
GET   /mentions                     controllers.Application.mentions
GET   /testMentions                 controllers.Application.testMentions
POST  /tweet                        controllers.Application.addTweet(userId: Long)

# GET   /tweet                      controllers.Application.getTweet(id: Long)
# GET   /addTweet                   controllers.Application.addTweet


GET /checkForReminders/:screenName              controllers.Application.checkForReminders(screenName: String)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
